pipeline {
    agent {
        label 'Dev'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('CPU Info') {
            steps {
                script {
                    // On Linux, fetch CPU details using shell commands
                    echo 'Fetching CPU details...'
                    sh 'lscpu' // To display CPU architecture information
                    sh 'cat /proc/cpuinfo' // To display detailed CPU information
                    sh 'top -bn1 | grep "Cpu(s)"' // To show current CPU usage
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
 